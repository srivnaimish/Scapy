<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.riseapp.test.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        android:src="@drawable/search"
        android:scaleType="centerCrop"
        android:contentDescription="card1_back" />
    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_height="0dp"
        android:layout_width="0dp"
        card_view:cardCornerRadius="0sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        android:alpha="0.92">

        <RelativeLayout
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C19D6D">
            <ImageView
                android:id="@+id/im1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_engine"
                android:layout_centerVertical="true"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Search Data"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/im1"
                android:layout_toRightOf="@+id/im1"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:id="@+id/t1" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:src="@drawable/www"
        android:scaleType="centerCrop"
        android:contentDescription="card2_back" />
    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_height="0dp"
        android:layout_width="0dp"
        card_view:cardCornerRadius="0sp"
        app:layout_constraintTop_toBottomOf="@+id/card1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:alpha="0.92">

        <RelativeLayout
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#D38D73">
            <ImageView
                android:id="@+id/im2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_www"
                android:layout_centerVertical="true"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goto A URL"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/im2"
                android:layout_toRightOf="@+id/im2"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:id="@+id/t2" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"
        tools:layout_editor_absoluteY="151dp"
        tools:layout_editor_absoluteX="0dp" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        tools:layout_editor_absoluteY="302dp"
        tools:layout_editor_absoluteX="0dp" />
    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75"
        tools:layout_editor_absoluteY="452dp"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:src="@drawable/phone"
        android:scaleType="centerCrop"
        android:contentDescription="card3_back" />


    <android.support.v7.widget.CardView
        android:id="@+id/card3"
        android:layout_height="0dp"
        android:layout_width="0dp"
        card_view:cardCornerRadius="0sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:alpha="0.92">

        <RelativeLayout
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CD515C">
            <ImageView
                android:id="@+id/im3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_receiver"
                android:layout_centerVertical="true"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan Phone No."
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/im3"
                android:layout_toRightOf="@+id/im3"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:id="@+id/t3" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ImageView
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:src="@drawable/email"
        android:scaleType="centerCrop"
        android:contentDescription="card4_back" />
    <android.support.v7.widget.CardView
        android:id="@+id/card4"
        android:layout_height="0dp"
        android:layout_width="0dp"
        card_view:cardCornerRadius="0sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2"
        android:alpha="0.92">

        <RelativeLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AB6476">
            <ImageView
                android:id="@+id/im4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_black_envelope"
                android:layout_centerVertical="true"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send email"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/im4"
                android:layout_toRightOf="@+id/im4"
                android:layout_marginStart="30sp"
                android:layout_marginLeft="30sp"
                android:id="@+id/t4" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
